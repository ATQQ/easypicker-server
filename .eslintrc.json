{
    "parser": "@typescript-eslint/parser",
    "env": {
        "node": true
    },
    "extends": [
        "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
        "@typescript-eslint",
        "todo-ddl"
    ],
    "rules": {
        "todo-ddl/diy": [
            "warn"
        ],
        "indent": [
            "warn",
            4
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "warn",
            "never"
        ]
    }
}